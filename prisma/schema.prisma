generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  username  String  @unique
  password  String
  bookslist Books[]
}

model Books {
  id       Int     @id @default(autoincrement())
  title    String
  pages    Int
  finished Boolean
  User     User?   @relation(fields: [userId], references: [id])
  userId   String?
}
